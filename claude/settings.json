{
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(tree:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(chmod:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(aws:*)",
      "Bash(yarn:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(pip:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(make:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "mcp__linear__list_project_labels",
      "mcp__linear__list_users",
      "mcp__linear__search_documentation"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(dd:*)",
      "Bash(mv /dev/null:*)"
    ],
    "ask": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -d:*)",
      "Bash(git clean -f:*)",
      "Bash(git:filter-branch:*)",
      "Bash(git push --delete:*)",
      "Bash(git branch -D:*)",
      "Bash(git remote rm:*)",
      "Bash(git remote remove:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh release delete:*)",
      "Bash(gh secret delete:*)",
      "Bash(gh repo archive:*)",
      "Bash(gh api:*)",
      "Bash(gh gpg-key delete:*)",
      "Bash(gh ssh-key delete:*)",
      "Bash(aws s3 rb:*)",
      "Bash(aws s3 rm:*)",
      "Bash(aws ec2 terminate-instances:*)",
      "Bash(aws rds delete-:*)",
      "Bash(aws dynamodb delete-:*)",
      "Bash(aws cloudformation delete-:*)",
      "Bash(aws iam delete-:*)",
      "Bash(aws lambda delete-:*)",
      "Bash(npm uninstall -g:*)",
      "Bash(npm uninstall --global:*)",
      "Bash(yarn global remove:*)",
      "Bash(pip uninstall:*)",
      "Bash(cargo uninstall:*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "hooks": {},
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "git-workflow@claude-code-templates": true,
    "commit-commands@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true
  },
  "outputStyle": "default",
  "alwaysThinkingEnabled": true
}
