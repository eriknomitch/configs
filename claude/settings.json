{
  "env": {},
  "includeCoAuthoredBy": false,
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(tree:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(chmod:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(aws:*)",
      "Bash(yarn:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(pip:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(make:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "mcp__linear__list_project_labels",
      "mcp__linear__list_users",
      "mcp__linear__search_documentation"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(dd:*)",
      "Bash(mv /dev/null:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -d:*)",
      "Bash(git clean -f:*)",
      "Bash(git:filter-branch:*)",
      "Bash(git push --delete:*)",
      "Bash(git branch -D:*)",
      "Bash(git remote rm:*)",
      "Bash(git remote remove:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh release delete:*)",
      "Bash(gh secret delete:*)",
      "Bash(gh repo archive:*)",
      "Bash(gh api:*)",
      "Bash(gh gpg-key delete:*)",
      "Bash(gh ssh-key delete:*)",
      "Bash(aws:*)",
      "Bash(aws s3 rb:*)",
      "Bash(aws s3 rm:*)",
      "Bash(aws ec2 terminate-instances:*)",
      "Bash(aws rds delete-:*)",
      "Bash(aws dynamodb delete-:*)",
      "Bash(aws cloudformation delete-:*)",
      "Bash(aws iam delete-:*)",
      "Bash(aws lambda delete-:*)",
      "Bash(npm uninstall -g:*)",
      "Bash(npm uninstall --global:*)",
      "Bash(yarn global remove:*)",
      "Bash(pip uninstall:*)",
      "Bash(cargo uninstall:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:3456/hook -H 'Content-Type: application/json' -d '{\"event\":\"Stop\"}' >> /tmp/claudecode-hooks.log 2>&1 &"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:3456/hook -H 'Content-Type: application/json' -d '{\"event\":\"SubagentStop\"}' >> /tmp/claudecode-hooks.log 2>&1 &"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:3456/hook -H 'Content-Type: application/json' -d '{\"event\":\"PostToolUse\",\"tool\":\"Bash\"}' >> /tmp/claudecode-hooks.log 2>&1 &"
          }
        ]
      }
    ]
  },
  "outputStyle": "engineer-professional",
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
