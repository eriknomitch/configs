# startx
sx()
{
  startx &

  sleep 1.5

  export DISPLAY=:0.0

  if [[ $1 == "m" ]] ; then
    display-mode monitor
  else
    display-mode no-monitor
  fi
}

# extract
ex()
{
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1;;
            *.tar.gz)    tar xvzf $1;;
            *.bz2)       bunzip2 $1;;
            *.rar)       unrar x $1;;
            *.gz)        gunzip $1;;
            *.tar)       tar xvf $1;;
            *.tbz2)      tar xvjf $1;;
            *.tgz)       tar xvzf $1;;
            *.zip)       unzip $1;;
            *.Z)         uncompress $1;;
            *.7z)        7z x $1;;
            *.xz)        unxz $1;;
            *)           echo "'$1' cannot be extracted via ex()" ;;
        esac
    else
        echo "'$1' is not a valid file"
        return 1
    fi
}

rsync-partial()
{
    rsync --partial --progress --rsh=ssh $*
}

command-exists() {
  (command -v $1 >/dev/null 2>&1)
}

function rm-history() {

  if [[ $HISTFILE != $ORIGINAL_HISTFILE ]]; then
    echo "fatal: HISTFILE does not match the originally set HISTFILE location. Exiting."
    return 1
  fi

  if [[ -z $HISTFILE ]] ; then
    echo "fatal: HISTFILE not set."
    return 1
  fi

  rm $HISTFILE
}

