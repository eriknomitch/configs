# ------------------------------------------------
# RUN --------------------------------------------
# ------------------------------------------------
function r() {
  if [[ ! -x ./run ]] ; then
    echo "fatal: ./run does not exist or is not executable."
    return 1
  fi

  clear
  ./run $*
}

alias rr="reset; r"

# ------------------------------------------------
# HISTORY ----------------------------------------
# ------------------------------------------------
function disable-history-for-session() {
  HISTFILE=/dev/null
  echo "HISTFILE set to /dev/null."
}

