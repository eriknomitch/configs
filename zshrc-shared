# Prevent C-s from hanging terminal
# http://unix.stackexchange.com/questions/72086/ctrl-s-hang-terminal-emulator
stty -ixon

# startx
sx()
{
  startx &

  sleep 1.5

  export DISPLAY=:0.0

  if [[ $1 == "m" ]] ; then
    display-mode monitor
  else
    display-mode no-monitor
  fi
}

# extract
ex()
{
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1;;
            *.tar.gz)    tar xvzf $1;;
            *.bz2)       bunzip2 $1;;
            *.rar)       unrar x $1;;
            *.gz)        gunzip $1;;
            *.tar)       tar xvf $1;;
            *.tbz2)      tar xvjf $1;;
            *.tgz)       tar xvzf $1;;
            *.zip)       unzip $1;;
            *.Z)         uncompress $1;;
            *.7z)        7z x $1;;
            *)           echo "'$1' cannot be extracted via ex()" ;;
        esac
    else
        echo "'$1' is not a valid file"
        return 1
    fi
}

rsync-partial()
{
    rsync --partial --progress --rsh=ssh $*
}

command-exists() {
  (command -v $1 >/dev/null 2>&1)
}

# ------------------------------------------------
# PROMPTS ----------------------------------------
# ------------------------------------------------
pwd-is-wd-character() {
  if pwd-is-wd ; then
    echo "*"
  elif [[ $PWD == $HOME ]] ; then
    echo "~"
  else
    echo " "
  fi
}

# Root
# ------------------------------------------------
if [[ $USER == "root" ]] ; then
  PROMPT=$'%{\e[31m%}%m# %{\e[0m%}'

# Non-Privileged
# ------------------------------------------------
else
  if ( $SSHED ) ; then

    if ( $ON_MICRO ) ; then
      _suffix_color=`micro-hostname-suffix`
    else
      _suffix_color="purple"
    fi

    if ( $_suffix_color == "black" ) ; then
      _suffix_color="grey"
    fi

    PROMPT=$'->%{$fg_bold[blue]%}[SSH]%{$reset_color%}-[%{$fg_bold[white]%}$(pwd-is-wd-character)%{$reset_color%}]->%{$fg[magenta]%}%m%{$reset_color%}%{$fg[magenta]%}%{$fg[$_suffix_color]%}$%{$reset_color%} '
  else
    PROMPT=$'%{$fg[green]%}%m$%{$reset_color%} '
  fi
fi

# Right-hand prompt
RPROMPT="%{$fg_bold[black]%}%~%{$reset_color%}"

if ( $ON_DARWIN ) ; then

  # Terminal.app has problems with bold black (grey).
  RPROMPT="%{$fg[white]%}%~%{$reset_color%}"

  alias del="rmtrash"

fi

