psg()
{
  if [[ -z $1 ]] ; then
    echo "$0: usage: QUERY"
  fi
}
mw()
{
  mv "$@" && cd "${@[-1]}";
}
gst()
{
  grep -IHiRe $1 ./ ;
}
fnd()
{
  find ./ -iname "*$1*" ;
}
is-sshed()
{
  if ( $SSHED ); then; return 0; else return 1; fi
}

