psg()
{
  if [[ -z $1 ]] ; then
    echo "$0: usage: QUERY"
  fi
}
mw()
{
  mv "$@" && cd "${@[-1]}";
}
gst()
{
  grep -IHiRe $1 ./ ;
}
fnd()
{
  _name="$1"
  shift
  find ./ -iname "*$_name*" $* ;
}
is-sshed()
{
  if ( $SSHED ); then; return 0; else return 1; fi
}
rex()
{
  sudo reboot &>/dev/null exit
}
pox() 
{
  sudo shutdown -h now &>/dev/null exit
}

