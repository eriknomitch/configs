# ------------------------------------------------
# HEROKU -----------------------------------------
# ------------------------------------------------
function h()
{
  case "$1" in
    # console (production)
    c)
    heroku run console
    ;;
    # console (development)
    cd)
    heroku run console RAILS_ENV=development
    ;;
    # config
    co)
    heroku config
    ;;
    # logs
    l)
    heroku logs
    ;;
    # default
    *)
    heroku $*
    ;;
  esac
}

