ORIGINAL_HISTFILE=$HISTFILE

# ------------------------------------------------
# UTILITY->SOURCING ------------------------------
# ------------------------------------------------
alias resource="unset ZSHRC_SOURCED; source ~/.zshrc"

function source-if-exists()
{
  _path=$1

  if [[ -f $_path ]] ; then
    source $_path
  fi
}

