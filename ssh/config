# ================================================
# SSH->CONFIG ====================================
# ================================================

# ------------------------------------------------
# IDENTITY ---------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
IdentityFile ~/.ssh/id_rsa

# ------------------------------------------------
# CONTROL ----------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
Host *
ControlMaster auto
ControlPath /tmp/%r@%h:%p

# ------------------------------------------------
# MAP->HOSTS -------------------------------------
# ------------------------------------------------

# lan-router
# ------------------------------------------------
# router.asus.com
Host lan-router, router, router.asus.com
  HostName router.asus.com
  User admin

# lan-ap-0
# ------------------------------------------------
Host lan-ap-0, ap-0
  HostName lan-ap-0
  User admin
  CheckHostIP no

# ------------------------------------------------
# MAP->HOSTS->MICROS -----------------------------
# ------------------------------------------------
Host micro-*
  HostName %h.local
  CheckHostIP no

# micro-black
# ------------------------------------------------
# Raspberry Pi Zero
#  - Puck

# micro-purple
# ------------------------------------------------
# Raspberry Pi Zero
#  - Puck

# micro-white
# ------------------------------------------------
# Raspberry Pi 2 Model B

# micro-green
# ------------------------------------------------
# Raspberry Pi 2 Model B

# micro-orange
# ------------------------------------------------
# Raspberry Pi 1 Model B

# micro-blue
# ------------------------------------------------
# Orange Pi
#  - Internal Ethernet
#    6e.02.e0.d2.d6.0b
Host micro-blue
  User micro

# micro-black
# ------------------------------------------------
# Raspberry Pi Zero

# 3d-printercamera (micro-grey)
# ------------------------------------------------
# Raspberry Pi Zero v.1.3
Host 3d-printer-camera
  HostName 3d-printer-camera
  User pi

# tv-controller-master
# ------------------------------------------------
# Raspberry Pi Zero v.1.3
Host tv-controller-master
  HostName tv-controller-master.local
  User pi

# chip
# ------------------------------------------------
# CHIP
#  - Internal Wi-FI
#    7c:c7:09:b6:f2:1d
Host chip
    HostName chip
    PermitLocalCommand true
    User chip
    Port 22

# equalizer
# ------------------------------------------------
# CHIP
#  - Internal Wi-FI
Host equalizer
    HostName equalizer.local
    PermitLocalCommand true
    CheckHostIP no
    
    User chip
    Port 22

