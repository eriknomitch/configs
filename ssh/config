# ------------------------------------------------

# Ethernet Adapter -> KQ
# ------------------------------------------------
# 00:e0:4c:53:44:58

# ------------------------------------------------
# LAN --------------------------------------------
# ------------------------------------------------
Host server
    HostName 10.0.0.20
    PermitLocalCommand true
    User erik
    Port 22

Host laptop
    HostName 10.0.0.21
    User erik

Host desktop-virtual
    HostName 10.0.56.10
    User erik

Host motion
    # 10.0.0.25
    HostName motion.nomitch.com
    User admin

# ------------------------------------------------
# LAN->MICROS ------------------------------------
# ------------------------------------------------
Host micro-*
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  ServerAliveInterval 60
  # WARNING
  User pi

