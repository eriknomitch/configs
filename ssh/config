# ================================================
# SSH->CONFIG ====================================
# ================================================

# ------------------------------------------------
# IDENTITY ---------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
IdentityFile ~/.ssh/id_rsa

# ------------------------------------------------
# CONTROL ----------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
Host *
ControlMaster auto
ControlPath /tmp/%r@%h:%p

# ------------------------------------------------
# MAP->HOSTS -------------------------------------
# ------------------------------------------------

# ------------------------------------------------
# MAP->HOSTS->MICROS -----------------------------
# ------------------------------------------------

Host micro-*
  HostName %h.local

# micro-black
# ------------------------------------------------
# Raspberry Pi Zero
#  - Puck

# micro-purple
# ------------------------------------------------
# Raspberry Pi Zero
#  - Puck

# micro-white
# ------------------------------------------------
# Raspberry Pi 2 Model B

# micro-green
# ------------------------------------------------
# Raspberry Pi 2 Model B

# micro-orange
# ------------------------------------------------
# Raspberry Pi 1 Model B

# micro-blue
# ------------------------------------------------
# Orange Pi
#  - Internal Ethernet
#    6e.02.e0.d2.d6.0b
Host micro-blue
  User micro

# micro-grey
# ------------------------------------------------
# CHIP
#  - Internal Wi-FI
#    7c:c7:09:b6:f2:1d

# ------------------------------------------------
# MAP->HOSTS->OTHER ------------------------------
# ------------------------------------------------

# SonosZB
# ------------------------------------------------
# Sonos Bridge
#  - Internal Ethernet
#    b8:e9:37:07:12:50
Host sonos-bridge
  HostName 10.0.0.50

# SonosZP
# ------------------------------------------------
# Sonos Play (FIX: Which?)
#  - Internal Ethernet
#    b8:e9:37:ef:6f:92

