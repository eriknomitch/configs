# ------------------------------------------------
# IDENTITY ---------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
IdentityFile ~/.ssh/id_rsa

# ------------------------------------------------
# CONTROL ----------------------------------------
# ------------------------------------------------
# Set the default identity because sometimes we have mutliple keys
Host *
ControlMaster auto
ControlPath /tmp/%r@%h:%p

# ------------------------------------------------
# MAP->HOSTS -------------------------------------
# ------------------------------------------------

# lan-router
# ------------------------------------------------
# router.asus.com
Host lan-router router router.asus.com
  HostName router.asus.com
  User admin

# lan-ap-0
# ------------------------------------------------
Host lan-ap-0, ap-0
  HostName lan-ap-0
  User admin
  CheckHostIP no

# ------------------------------------------------
# MAP->HOSTS->MICROS -----------------------------
# ------------------------------------------------
Host micro-*
  HostName %h.local
  CheckHostIP no

# 3d-printercamera (micro-grey)
# ------------------------------------------------
# Raspberry Pi Zero v.1.3
Host 3d-printer-camera
  HostName 3d-printer-camera.local

# micro-touchscreen
# ------------------------------------------------
Host micro-touchscreen
  User pi

# chip
# ------------------------------------------------
# CHIP
#  - Internal Wi-FI
#    7c:c7:09:b6:f2:1d
Host chip
  HostName chip
  PermitLocalCommand true
  User chip
  Port 22

# sdr
# - odroidc2
# ------------------------------------------------
Host sdr
